var closeBtnNav=$(".btn-m-close-nav");var bgMNav=$(".bg-m-nav");var navBody=$(".m-nav-left");var btnOpenNav=$(".btn-m-ham");closeBtnNav.bind("click",function(e){e.preventDefault();bgMNav.addClass("blind");navBody.css({left:"-100%"})});btnOpenNav.bind("click",function(e){e.preventDefault();bgMNav.removeClass("blind");navBody.css({left:"0"})});var navLink=$(".nav-link-m");var activeClassName="active";navLink.bind("click",function(e){e.preventDefault();var idx=$(this).parent().index()+1;console.info(idx);navLink.removeClass(activeClassName);$(this).addClass(activeClassName);goGetSection(".section-0"+idx);bgMNav.addClass("blind");navBody.css({left:"-100%"})});function goGetSection(target){var posY=$(target).offset().top;$("html, body").stop().animate({scrollTop:posY-69+"px"},500)}if($("#news-container").length>0){$("#news-container").vTicker({speed:500,pause:3e3,animation:"fade",mousePause:false,showItems:6})}var swiperTopBan=new Swiper(".vt-swiper-container-home-banner",{pagination:{el:".vt-swiper-pagination-home-banner",clickable:true},slidesPerView:1,spaceBetween:0,effect:"slide",loop:true,autoplay:{delay:5e3},speed:1e3,navigation:{nextEl:".swiper-button-next",prevEl:".swiper-button-prev"},on:{slideChangeTransitionStart:function(){var _idx=this.activeIndex;if(_idx>6){_idx=1}activeBannerSlide(_idx)}}});var activeBannerClassName="active";function activeBannerSlide(num){console.info(num);$(".left-side-nav a").removeClass(activeBannerClassName);$(".left-side-nav a").eq(num-1).addClass(activeBannerClassName)}$(".left-side-nav a").bind("click",function(e){e.preventDefault();$(".left-side-nav a").removeClass(activeBannerClassName);var idx=$(this).index();$(".left-side-nav a").eq(idx).addClass(activeBannerClassName);swiperTopBan.slideTo(idx+1,1e3,true)});